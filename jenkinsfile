#! groovy
pipeline {
    agent none
    stages{
        stage ("Maven Install") {
            agent{ 
                docker{
                    image 'maven:3.9.5'
                     args '-u root'
                }
            }
            steps {
                sh 'mvn clean install'
            }
        }
	stage ("Docker Build"){
	  agent any
	  steps {
	    sh 'docker build -t laljanibasha/spring-petclinic:latest .' 
	  }
       }
    }
}
